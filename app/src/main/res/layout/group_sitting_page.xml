<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingGroup"
    android:background="@drawable/background">


    <Button
        android:id="@+id/deletGroup"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/square"
        android:text="حذف المجموعة"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView17"
        android:onClick="deleteGroup"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="340dp"
        android:layout_height="78dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="400dp"
        android:background="@drawable/login_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/editGrouptName"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:outlineSpotShadowColor="@color/white"
        android:backgroundTint="?android:attr/windowBackground"
        android:src="@drawable/edit"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/itemName"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.25"
        />
    <TextView
        android:id="@+id/gName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="6dp"
        android:text="عائلتي"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.266"
        android:layout_marginLeft="279dp" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="333dp"
        android:layout_height="239dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.541"
        app:srcCompat="@drawable/login_rectangle" />

    <Button
        android:id="@+id/addmeMember"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:backgroundTint="?android:attr/windowBackground"
        android:drawableLeft="@drawable/arrow"
        android:drawableRight="@drawable/profile"
        android:gravity="start"
        android:paddingTop="12dp"
        android:shadowColor="@color/white"
        android:text="إضافة عضو"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView17"
        app:layout_constraintEnd_toEndOf="@+id/imageView17"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView17"
        app:layout_constraintTop_toTopOf="@+id/imageView17"
        app:layout_constraintVertical_bias="0.0"
        android:onClick="AddMember"/>

    <Button
        android:id="@+id/deletMember"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:onClick="deletMember"
        android:backgroundTint="?android:attr/windowBackground"
        android:drawableLeft="@drawable/arrow"
        android:drawableRight="@drawable/remove_memmber"
        android:gravity="start"
        android:paddingTop="12dp"
        android:shadowColor="@color/white"
        android:text="حذف عضو"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView17"
        app:layout_constraintEnd_toEndOf="@+id/imageView17"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView17"
        app:layout_constraintTop_toTopOf="@+id/imageView17"
        app:layout_constraintVertical_bias="0.335"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/addItem"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="330dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="?android:attr/windowBackground"
        android:drawableLeft="@drawable/arrow"
        android:drawableRight="@drawable/addcircle"
        android:gravity="start"
        android:paddingTop="12dp"
        android:shadowColor="@color/white"
        android:text="إضافة ممتلك"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20dp"
        android:onClick="AddItem"
        app:layout_constraintBottom_toBottomOf="@+id/imageView17"
        app:layout_constraintEnd_toEndOf="@+id/imageView17"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView17"
        app:layout_constraintTop_toBottomOf="@+id/aboveline" />

    <Button
        android:id="@+id/delete"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:onClick="deletGItem"
        android:backgroundTint="?android:attr/windowBackground"
        android:drawableLeft="@drawable/arrow"
        android:drawableRight="@drawable/delete"
        android:gravity="start"
        android:paddingTop="12dp"
        android:shadowColor="@color/white"
        android:text="حذف ممتلك"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView17"
        app:layout_constraintEnd_toEndOf="@+id/imageView17"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView17"
        app:layout_constraintTop_toTopOf="@+id/imageView17"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="OnClick" />



</androidx.constraintlayout.widget.ConstraintLayout>