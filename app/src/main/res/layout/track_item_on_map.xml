<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-7dp">

        <ImageView
            android:id="@+id/phoneposition"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="39dp"
            android:src="@drawable/phone" />

        <View
            android:layout_width="234dp"
            android:layout_height="2dp"
           android:layout_marginLeft="80dp"
            android:background="#0D47A1" />


    </LinearLayout>

    <TextView
        android:id="@+id/editTextTextItemName"
        android:layout_width="79dp"
        android:layout_height="22dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:text=" حقيبتي"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.964"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editTextTextItemDis"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:text="٢ م"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/itemposition"
        android:layout_width="68dp"
        android:layout_height="32dp"


        app:srcCompat="@drawable/ic_baseline_blur_circular_24"
        tools:ignore="MissingConstraints,VectorDrawableCompat"
        tools:layout_editor_absoluteX="316dp"
        tools:layout_editor_absoluteY="53dp" />


</androidx.constraintlayout.widget.ConstraintLayout>